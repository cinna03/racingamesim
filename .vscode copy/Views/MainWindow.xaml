<Window x:Class="TimeBasedRacingGame.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="C# Speed Rush" Height="600" Width="800"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Background="#FAF7FC">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <!-- Main Panel -->
        <Border Background="#F7A7C4" CornerRadius="20" Margin="40" Padding="30">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Grid.Row="0" Text="C# Speed Rush" 
                           FontSize="32" FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Foreground="White" 
                           FontFamily="Segoe UI" 
                           Margin="0,0,0,25"/>

                <!-- Car Selection Dropdown -->
                <Border Grid.Row="1" Background="#FAF7FC" 
                        CornerRadius="10" 
                        Padding="15,10" 
                        Margin="0,0,0,20"
                        Cursor="Hand"
                        MouseLeftButtonDown="CarSelectionBorder_MouseLeftButtonDown">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   x:Name="CarSelectionLabel"
                                   Text="Car Selection" 
                                   Foreground="#3B3944" 
                                   FontSize="14" 
                                   FontFamily="Segoe UI"
                                   VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="â–¼" 
                                   Foreground="#3B3944" 
                                   FontSize="12" 
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"/>
                        <ComboBox x:Name="CarSelectionComboBox" 
                                  Grid.ColumnSpan="2"
                                  Opacity="0"
                                  SelectionChanged="CarSelectionComboBox_SelectionChanged"/>
                    </Grid>
                </Border>

                <!-- Lap Progress -->
                <Grid Grid.Row="2" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                               x:Name="LapLabel" 
                               Text="Lap 1/5" 
                               Foreground="White" 
                               FontSize="14" 
                               FontFamily="Segoe UI"
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"/>
                    <Border Grid.Column="1" 
                            Background="#FAF7FC" 
                            CornerRadius="10" 
                            Height="20">
                        <Border x:Name="LapProgressFill" 
                                Background="#E85A9B" 
                                CornerRadius="10" 
                                HorizontalAlignment="Left" 
                                Width="0"/>
                    </Border>
                </Grid>

                <!-- Fuel Progress -->
                <Grid Grid.Row="3" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                               Text="Fuel" 
                               Foreground="White" 
                               FontSize="14" 
                               FontFamily="Segoe UI"
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"/>
                    <Border Grid.Column="1" 
                            Background="#FAF7FC" 
                            CornerRadius="10" 
                            Height="20">
                        <Border x:Name="FuelProgressFill" 
                                Background="#E85A9B" 
                                CornerRadius="10" 
                                HorizontalAlignment="Left" 
                                Width="100"/>
                    </Border>
                </Grid>

                <!-- Time & Speed -->
                <Grid Grid.Row="4" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                               Text="Time" 
                               Foreground="White" 
                               FontSize="14" 
                               FontFamily="Segoe UI"
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"/>
                    <TextBlock Grid.Column="1" 
                               x:Name="TimeSpeedLabel" 
                               Text="Speed: 0" 
                               Foreground="White" 
                               FontSize="14" 
                               FontFamily="Segoe UI"
                               VerticalAlignment="Center"/>
                </Grid>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="5" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Margin="0,0,0,20">
                    <Button x:Name="SpeedUpButton" 
                            Content="Speed Up" 
                            Padding="25,12" 
                            Margin="5" 
                            Click="SpeedUpButton_Click" 
                            IsEnabled="False" 
                            FontWeight="Normal" 
                            FontSize="13" 
                            FontFamily="Segoe UI"
                            Background="#FAF7FC" 
                            Foreground="#3B3944" 
                            BorderThickness="2"
                            BorderBrush="#E85A9B"
                            Cursor="Hand"/>
                    <Button x:Name="MaintainSpeedButton" 
                            Content="Maintain" 
                            Padding="25,12" 
                            Margin="5" 
                            Click="MaintainSpeedButton_Click" 
                            IsEnabled="False" 
                            FontWeight="Normal" 
                            FontSize="13" 
                            FontFamily="Segoe UI"
                            Background="#FAF7FC" 
                            Foreground="#3B3944" 
                            BorderThickness="2"
                            BorderBrush="#E85A9B"
                            Cursor="Hand"/>
                    <Button x:Name="PitStopButton" 
                            Content="Pit Stop" 
                            Padding="25,12" 
                            Margin="5" 
                            Click="PitStopButton_Click" 
                            IsEnabled="False" 
                            FontWeight="Normal" 
                            FontSize="13" 
                            FontFamily="Segoe UI"
                            Background="#FAF7FC" 
                            Foreground="#3B3944" 
                            BorderThickness="2"
                            BorderBrush="#E85A9B"
                            Cursor="Hand"/>
                </StackPanel>

                <!-- Overall Progress Bar with Car Icon -->
                <Grid Grid.Row="6" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                               Text="ðŸš—" 
                               FontSize="20" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <Border Grid.Column="1" 
                            Background="#FAF7FC" 
                            CornerRadius="10" 
                            Height="20">
                        <Border x:Name="OverallProgressFill" 
                                Background="#E85A9B" 
                                CornerRadius="10" 
                                HorizontalAlignment="Left" 
                                Width="0"/>
                    </Border>
                </Grid>

                <!-- Start Race Button -->
                <Button Grid.Row="7" 
                        x:Name="StartRaceButton" 
                        Content="Start Race" 
                        Click="StartRaceButton_Click" 
                        IsEnabled="False"
                        Padding="25,12" 
                        Margin="0,20,0,0"
                        FontWeight="Normal" 
                        FontSize="13" 
                        FontFamily="Segoe UI"
                        Background="#FAF7FC" 
                        Foreground="#3B3944" 
                        BorderThickness="2"
                        BorderBrush="#E85A9B"
                        Cursor="Hand"
                        HorizontalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>